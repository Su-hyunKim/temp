<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
  
<mapper namespace="mapperInterface.AuthMapper">
 	
 	<!-- ** CRUD 기본 ** -->
 	<select id="selectList" resultType="vo.AuthVO">
 		select * from member_auth
 	</select>
 
 	<select id="selectOne" resultType="vo.AuthVO">
		select * from member_auth where member_id = #{member_id}
	</select>

	<!-- 가입시 인증 authority:'ROLE_USER' -->
	<insert id="insert">
		insert into member_auth(member_id, authority)
		values(#{member_id},#{authority})
	</insert>
	
	<!-- seller로 등록시 authority:'ROLE_SELLER' -->
	<update id="update">
		update member_auth set authority=#{authority} where member_id=#{member_id}
	</update>
		
	<delete id="delete">
		delete from member_auth where member_id=#{member_id}	
	</delete>
 
</mapper>